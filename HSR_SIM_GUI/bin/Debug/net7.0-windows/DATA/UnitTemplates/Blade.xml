<Unit element="Wind">	
	<Stats maxHp="10000" attack="10" energy="90" baseSpeed="120"/>
	<!--Karma Wind-->
	<Ability name="Karma Wind" type="Technique" costType="TP" cost="1" element="Wind">
		<Event onStep="TechniqueUse" type="CombatStartSkillQueue"/>
		<Event onStep="TechniqueUse" type="EnterCombat"/>	
		<Event onStep="ExecuteStartQueue" target ="Self" type="ResourceDrain" resType="HP" strValue="Self.MaxHp.20%" needCalc="true" canSetToZero="false" />		
		<Event onStep="ExecuteStartQueue" target ="AOE" type="ResourceDrain" resType="Toughness"  strValue="Target.Toughness.100%" needCalc="true">
			<ExecuteWhen>
				<Condition orgroup="WEAKNESS_CHECK">
					<Check  type="CheckTarget">				
						<Check type="Alive" value="true"/>
						<Check type="WeaknessType" value="@CasterElement"/>					
					</Check>
				</Condition>
			</ExecuteWhen>
		</Event>
		<Event onStep="ExecuteStartQueue" target ="AOE" type="DirectDamage" strValue="Self.MaxHp.40%" needCalc="true"/>
		
		<!--Execution conditions-->
		<ExecuteWhen template="DefaultEnterCombatTechnique"/>					
	</Ability>
</Unit>