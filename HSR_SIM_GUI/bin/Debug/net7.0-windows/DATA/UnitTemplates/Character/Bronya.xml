<Unit element="Wind" type="Character">
	<Ability name="Banner of Command" type="Technique" costType="TP" cost="1">
		<Event onStep="TechniqueUse" type="CombatStartSkillQueue"/>
		<Event onStep="ExecuteStartQueue" type="Mod">
			<Mod type="Buff" target="Party" modifier="AtkPrc" value="15" duration="2" dispellable="true" />
		</Event>
		<ExecuteWhen>
			<Condition>
				<Check type="CombatStartSkillQueue" value="self" clause="false"/>							
			</Condition>			
			<Condition orgroup="TP_SPENDING">
				<Check  type="ResourceCheck" value="Party" clause="true">
					<Check type="ResourceType" value="TP"/>
					<Check type="ResourceQuantity" value="2"/>
				</Check>				
			</Condition>			
			<Condition orgroup="TP_SPENDING">
				<Check  type="ResourceCheck" value="Party" clause="true">
					<Check type="ResourceType" value="TP"/>
					<Check type="ResourceQuantity" value="1"/>
				</Check>
				<!--Have no unit in party who can use technique on weakness-->
				<Check  type="FindTarget" value="Party" clause="false">
					<Check type="Alive" value="true"/>
					<Check type="HaveSkill">
						<Check type="AbilityType" value="Technique" />
						<Check type="AbilityCostType" value="TP" />
						<Check type="AbilityCost" value="1" />						
						<Check type="HaveEvent">
							<Check type="EventType" value="EnterCombat" />
						</Check>
					</Check>	
					<Check  type="FindTarget" value="hostiles">				
						<Check type="Alive" value="true"/>
						<Check type="WeaknessType" value="@PartyUnitElement"/>	
					</Check>				
				</Check>		
			</Condition>		
		</ExecuteWhen>
	</Ability>
</Unit>